def check_password_strength(password1):

      #check if the password has atleast 8 characters
      if len (password1)<8:
      return False
      #check if the password has atleast one uppercase character
      elif not re.search(r'[A-Z]'password1):
      return False
      #check if the password contains atleast one digit
      elif not.search(r'[1234567890]',password1):
      return False
      #check if the password contains atleast one special character
      elif not search(r'[!@#$%^&*()]',password1):
      return False
      else:
           return True

